<?xml version="1.0" encoding="UTF-8"?>

<?import com.akubuof.memorizerbuddy.fxmlcontrollers.components.MBHeader?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="300.0" minWidth="500.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.akubuof.memorizerbuddy.fxmlcontrollers.scenes.HomeView">
    <top>
        <MBHeader fx:id="header" title="Memorizer Buddy" />
    </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="50.0"/>
         </padding>
         <Button fx:id="createOrModifyButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="220.0"
                 style="-fx-border-radius: 50; -fx-background-radius: 50;" text="Create/Modify">
            <font>
               <Font name="Tahoma Bold" size="24.0"/>
            </font>
         </Button>
         <Button fx:id="reviseButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="220.0"
                 style="-fx-border-radius: 50; -fx-background-radius: 50;" text="Revise">
            <font>
               <Font name="Tahoma Bold" size="24.0"/>
            </font>
         </Button>
      </VBox>
   </center>

</BorderPane>
